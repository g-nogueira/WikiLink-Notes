{
  "manifest_version": 2,
  "name": "WikiLink Extension",
  "description": "This extension alows the user to fast search wiki terms.",
  "version": "1.0",
  "omnibox": {
    "keyword": "wl:"
  },
  "icons": {
    "128": "Images/icon7.png"
  },
  "options_page": "optionsPage/main.html",
  // "options_ui": {"page":"optionsPage/main.html"},
  "background": { "scripts": [
      "eventPage.js",
      "repository/wikiRepo.js"
    ],
    "persistence": true
  },
  "browser_action": {
    "default_locale": "en",
    "default_icon": "Images/icon7.png",
    "default_popup": "popup/popup.html",
    "default_title": "WikiLink Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popover/wlPopover.js"
      ],
      "css": [
        "popover/popover.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js; object-src 'self'"
}