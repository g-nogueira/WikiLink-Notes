{
  "manifest_version": 2,

  "name": "WikiLink Extension",
  "description": "This extension alows the user to fast search wiki terms.",
  "version": "1.0",
  "omnibox": { "keyword": "wl:" },
  // "options_ui": {"page": "optionsPage/main.html", "chrome_style":true},
  "options_page":"optionsPage/main.html",
  "background": {
    "scripts": [ "eventPage.js", "repository/repo.js", "require.js"],
    // "css":["css/*"],
    "persistence": true
  },

  "browser_action": {
    "default_locale": "en",
    "default_icon": "Images/icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "WikiLink Settings"
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "floatingWL.js", "repository/repo.js" ],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ],

  "content_security_policy":"script-src 'self' https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js; object-src 'self'"
}