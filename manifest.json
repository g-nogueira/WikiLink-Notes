{
  "manifest_version": 2,
  "name": "WikiLink Extension",
  "description": "This extension alows the user to fast search wiki terms.",
  "version": "1.0",
  "omnibox": {
    "keyword": "wl:"
  },
  "options_page": "optionsPage/main.html",
  "background": {
    "scripts": ["eventPage.js"],
    "persistence": false
  },
  "browser_action": {
    "default_locale": "en",
    "default_icon": "Images/icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "WikiLink Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["wlPopover.js"],
      "css": ["css/popover.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "<all_urls>"
  ],

  "content_security_policy":"script-src 'self' https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js; object-src 'self'"
}